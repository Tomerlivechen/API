@model List<MovieViewModel>


<h1> Movie List</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Overview
            </th>
            <th>
                Poster
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr onclick="window.location.href='/Movie/Details/@item.Id';" style="cursor: copy;">
                
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Description

                </td>
                <td>
                    @item.Overview
                </td>
                <td>
                    <img src="@item.GetSmallImage()" />
                </td>
                
            </tr>
        }
    </tbody>
</table>

