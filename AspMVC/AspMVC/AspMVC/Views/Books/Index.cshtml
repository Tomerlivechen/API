@model List<BookViewItem>


<h1>Books</h1>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                Title
            </th>
            <th>
                Description
            </th>
            <th>
                Author
            </th>
            <th>
                Published
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
             <td>
                    <a class="text-dark text-decoration-none" href="/Books/Details/@item.id">@item.Title</a>
            </td>
            <td>
                    @item.Description

            </td>
            <td>
                    @item.Author
            </td>
                        <td>
                    @item.Published.Year
            </td>

        </tr>
        }
    </tbody>
</table>
