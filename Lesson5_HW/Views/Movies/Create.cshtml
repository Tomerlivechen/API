@model Lesson5_HW.Models.Movie

@{
    ViewData["Title"] = "Create";
    List<Director> Directorlist = ViewBag.DirectorList;
    List<Actor> Actorlist = ViewBag.Actors;
    List<OscarAward> Awardlist = ViewBag.Awards;
}

<h1>Create</h1>

<h4>Movie</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirectorId" class="control-label"></label>
                <select asp-for="DirectorId" class="form-control">
                    @foreach (var director in Directorlist)
                    {
                        <option value="@director.Id">@director.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ActorId" class="control-label"></label>
                <select asp-for="ActorId" class="form-control" multiple="multiple">
                    @foreach (var Actor in Actorlist)
                    {
                        <option value="@Actor.Id">@Actor.FirstName @Actor.LastName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="AwardId" class="control-label"></label>
                <select asp-for="AwardId" class="form-control" multiple="multiple">
                    @foreach (var Award in Awardlist)
                    {
                        <option value="@Award.Id">@Award.Type @Award.Year</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
