@model SongAndAlbumsViewModels

@{
    ViewData["Title"] = "Create";
  //  var albums = ViewBag.Albums;
}

<h1>Create</h1>

<h4>Song</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Song.Name" class="control-label"></label>
                <input asp-for="Song.Name" class="form-control" />
                <span asp-validation-for="Song.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Length" class="control-label"></label>
                <input asp-for="Song.Length" class="form-control" />
                <span asp-validation-for="Song.Length" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.genre" class="control-label"></label>
                <input asp-for="Song.genre" class="form-control" />
                <span asp-validation-for="Song.genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Song.Album" class="control-label"></label>
                <select asp-for="Song.AlbumId" class="form-control">
                    <option value=@null> Single </option>
                @foreach (Album album in Model.Albums) {
                    <option value=@album.Id> @album.Name </option>
                }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
